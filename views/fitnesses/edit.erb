<form action="/<%= @fitnesses[:id] %>" method="post">

<input type="hidden" name="_method" value="put">

  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder=" Enter Title" value = " <%= @fitnesses[:title] %>">
  </div>

  <div>
    <label>Body</label>
    <textarea name="body"><%= @fitnesses[:body] %></textarea>
  </div>

  <div>
    <input type="submit" value="Save ">
  </div>
</form>

